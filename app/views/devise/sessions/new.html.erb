


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <h4>Log in</h4>
 
  <div class="input-field col s6">
  <hr>
  <div class="field">
    <%= f.label :email, class:"text-session" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
 </div>
</div> 
<div class="row"> 
  <div class="input-field col s6">
  <div class="field ">
    <%= f.label :password, class:"text-session" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
 </div>
</div>  
</div>  

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions material-icons perm_identity">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
